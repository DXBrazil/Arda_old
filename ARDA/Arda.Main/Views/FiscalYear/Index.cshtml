@model IEnumerable<Arda.Main.ViewModel.FiscalYearMainViewModel>
<section class="concontainer-fluid">

    <div class="col-xs-12">
        <div class="row">
            <header class="ctn-header-dashboard">

                <!-- Title -->
                <div class="col-xs-12 col-lg-3 col-md-4">
                    <h2>
                        Fiscal Years
                    </h2>
                </div>

                <!-- Some information -->
                <div class="col-xs-12 col-lg-3 col-md-4">
                    
                </div>

                <!-- Clear some garbage -->
                <div class="clearfix"></div>


            </header>

            <div style="margin-top:20px;">
        
                <div class="col-xs-12 col-md-8" style="border-right:1px solid #efefef;">

                    <table id="table-fiscalyears" class="display" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Fiscal year</th>
                                <th>Numerical</th>
                                <th></th>
                            </tr>
                         </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TextualFiscalYearMain)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FullNumericFiscalYearMain)
                                    </td>
                                    <td>
                                        text
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-xs-6 col-md-4">
                    <h3>
                        New fiscal year
                    </h3>
                    <p>
                        To add a new Fiscal Year, please click on button bellow. <br />
                        <div style="margin-bottom:50px;">
                            <a asp-controller="FiscalYear" asp-action="Add" class="btn btn-success" style="width:100px;">+ Add</a>
                        </div>
                    </p>
                </div>
            </div>

        </div>
    </div>
</section>