<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Arda Management Tool</title>
    <meta name="description" content="" />
    <link rel="stylesheet" type="text/css" href="~/Layouts/ModernUI/css/core.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/jquery.dataTables.min.css" /> 

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://getbootstrap.com/dist/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.autocomplete.min.js"></script>
</head>
<body>
    <main>
        <div class="main">
            <header class="navbar navbar-arda navbar-static-top" role="navigation">
                <nav class="container-fluid">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Dashboard" asp-action="Index" class="navbar-brand">
                            <strong>Arda</strong> Management Tool
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                            <strong>Arda</strong> Management Tool
                        </a>
                    }
                    

                    <!-- Dynamic menu -->
                    @await Html.PartialAsync("_PartialDynamicMenu")

                    @if (User.Identity.IsAuthenticated)
                    {
                    <!-- User infos -->
                    <div style="line-height:70px;" class="pull-right">
                        <ul class="nav navbar-nav">
                            <li class="nav-item">Welcome, <strong>@User.Claims.First(claim => claim.Type == "name").Value</strong></li>&nbsp;
                            <a asp-controller="Account" asp-action="SignOut" class="btn btn-danger btn-sm">Logout</a>
                        </ul>
                    </div>
                    }
                </nav>
            </header>
            @RenderBody()
        </div>
    </main>
    <footer class="ctn-footer" style="margin-top:20px;">
        <div class="container">
            <div class="row">
                <div class="col-xs-9">
                    <div class="media">
                        <div class="media-left">
                            <!-- ARDA brand -->
                        </div>
                        <span class="footer-credits">
                            &copy; Microsoft @DateTime.Now.Year
                                <a asp-controller="Home" asp-action="About" class="footer-credits-links">About</a>
                                <a asp-controller="Home" asp-action="Support" class="footer-credits-links">Support</a>
                                <a href="http://github.com/microsoft/arda" class="footer-credits-links">Github</a>
                        </span>
                    </div>
                </div>
                <div class="col-xs-3">
                    <img src="~/Layouts/ModernUI/img/microsoft-logo.png" class="footer-logo">
                </div>
            </div>
        </div>
    </footer>
    


    <!-- Modal Need Help -->
    <div id="generic-modal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><!-- Dynamic content --></h4>
                </div>

                <div class="modal-body">
                    <!-- Dynamic content -->
                </div>

                <div class="modal-footer">
                    <!--<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>-->
                </div>
            </div>

        </div>
    </div>
    <!-- End modal -->

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/BasicOperations.js"></script>
</body>
</html>