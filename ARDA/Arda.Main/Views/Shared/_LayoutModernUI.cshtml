<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Arda Management Tool</title>
    <meta name="description" content="">
    <link rel="stylesheet" type="text/css" href="~/Layouts/ModernUI/css/core.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Layouts/ModernUI/css/jquery.dataTables.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://getbootstrap.com/dist/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.autocomplete.min.js"></script>
</head>
<body>

    <main class="main">
        @if (User.Identity.IsAuthenticated) {
            <header class="navbar navbar-arda navbar-default">
                <nav class="container-fluid">
                    <a asp-controller="Dashboard" asp-action="Index" class="navbar-brand">
                        <strong>Arda</strong> Management Tool
                    </a>

                    @await Html.PartialAsync("_PartialDynamicMenu")

                </nav>
            </header>
        }
        else
        {
            
            <header class="navbar navbar-landing navbar-fixed-top">
                <nav class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="navbar-landing-item"><a href="#">Home</a></li>
                            <li class="navbar-landing-item"><a href="#about">About</a></li>
                            <li class="navbar-landing-item"><a href="#getsupport">Get Support</a></li>
                            <li class="navbar-landing-item"><a href="#howto">How to</a></li>
                            <li class="navbar-landing-item"><a href="#overview">Overview</a></li>
                            <li class="navbar-landing-item"><a href="#collaboration">Collaboration</a></li>
                            <li class="navbar-landing-item"><a asp-controller="Account" asp-action="SignIn"><i class="icon-user"></i></a></li>
                        </ul>
                        
                    </div>
                </nav>
            </header>

        }

        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-xs-9">
                    <div class="media">
                        <div class="media-left">

                        </div>
                        <span class="footer-credits text-left">
                            &copy; Microsoft @DateTime.Now.Year
                        </span>
                        <a asp-controller="Home" asp-action="About" class="footer-credits-links">About</a>
                        <a asp-controller="Home" asp-action="GetSupport" class="footer-credits-links"><i class="fa fa-life-ring" aria-hidden="true"></i> Get Support</a>
                        <a href="http://github.com/microsoft/arda" target="_blank" class="footer-credits-links"><i class="fa fa-github" aria-hidden="true"></i> Github</a>

                    </div>
                </div>
                <div class="col-xs-3">
                    <img src="~/Layouts/ModernUI/img/microsoft-logo.png" class="footer-logo">
                </div>
            </div>
        </div>
    </footer>

    <!-- Modal Need Help -->
    <div id="generic-modal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><!-- Dynamic content --></h4>
                </div>

                <div class="modal-body">
                    <!-- Dynamic content -->
                </div>

                <div class="modal-footer">
                    <!--<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>-->
                </div>
            </div>

        </div>
    </div>
    <!-- End modal -->

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/BasicOperations.js"></script>
</body>
</html>