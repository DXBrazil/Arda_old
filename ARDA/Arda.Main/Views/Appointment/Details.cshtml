@model Arda.Common.ViewModels.Main.AppointmentViewModel
<section class="concontainer-fluid">

    <div class="col-xs-12">
        <div class="row">
            <header class="ctn-header-dashboard">

                <!-- Title -->
                <div class="col-xs-12 col-lg-3 col-md-4">
                    <h2>
                        Work Appointment
                    </h2>
                    <p>Adding a new work appointment to specific workload</p>
                </div>

                <!-- Some information -->
                <div class="col-xs-12 col-lg-3 col-md-4">

                </div>

                <!-- Clear some garbage -->
                <div class="clearfix"></div>


            </header>

            <div style="margin-top:20px;">

                <div class="col-xs-12 col-md-8" style="border-right:1px solid #efefef;">

                    <form id="form-add-appointment" role="form" data-toggle="validation">

                        <div class="form-group">
                            <label for="_AppointmentID">Code:</label>
                            <input type="text" class="form-control" id="_AppointmentID" name="_AppointmentID" value="@Model._AppointmentID" readonly>
                        </div>

                        <div class="form-group">
                            <label for="_AppointmentUserName">Appointment to:</label>
                            <input type="text" class="form-control" id="_AppointmentUserName" name="_AppointmentUserName" value="@User.Claims.First(claim => claim.Type == "name").Value" readonly />
                        </div>

                        <div class="form-group">
                            <label for="_WorkloadTitle">Workload:</label>
                            <input id="_WorkloadTitle" name="_WorkloadTitle" type="search" class="form-control" value="@Model._WorkloadTitle" disabled />
                        </div>

                        <div class="row">
                            <div class="col-md-4" id="sandbox-container">
                                <div class="form-group">
                                    <label for="_AppointmentDate">Appointment date:</label>
                                    <div class="input-group date">
                                        <input type="text" id="_AppointmentDate" name="_AppointmentDate" class="form-control" value="@Model._AppointmentDate.ToString("dd/MM/yyyy")" disabled />
                                        <span class="input-group-addon"><i class="fa fa-calendar-check-o" aria-hidden="true"></i></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="_AppointmentHoursDispensed">Hours dispensed (on refered date):</label>
                                    <select id="_AppointmentHoursDispensed" name="_AppointmentHoursDispensed" class="form-control" disabled>
                                        <option value="" selected>@Model._AppointmentHoursDispensed</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="_AppointmentTE">T&E (if applyable):</label>
                                    <input type="text" id="_AppointmentTE" name="_AppointmentTE" class="form-control" value="@Model._AppointmentTE" disabled />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="_AppointmentComment">Any comment about this activity?</label>
                            <textarea class="form-control" rows="5" id="_AppointmentComment" name="_AppointmentComment" disabled>@Model._AppointmentComment</textarea>
                        </div>

                    </form>

                    <div style="margin-top:20px;" id="message">
                        <!-- Message dynamically inputed here -->
                    </div>

                </div>
                <div class="col-xs-6 col-md-4">
                    <h3>
                        New work appointment
                    </h3>
                    <p>
                        To add a new work appointment, please click on button bellow. <br />
                        <div style="margin-bottom:50px;">
                            <a asp-controller="Appointment" asp-action="Add" class="btn btn-success" style="width:100px;">+ Add</a>
                        </div>
                    </p>
                </div>
            </div>

        </div>
    </div>
</section>


