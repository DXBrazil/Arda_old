<section class="concontainer-fluid">

    <div class="col-xs-12">
        <div class="row">
            <header class="ctn-header-dashboard">

                <!-- Title -->
                <div class="col-xs-12 col-lg-3 col-md-4">
                    <h2>
                        Work Appointment
                    </h2>
                    <p>Adding a new work appointment to specific workload</p>
                </div>

                <!-- Some information -->
                <div class="col-xs-12 col-lg-3 col-md-4">

                </div>

                <!-- Clear some garbage -->
                <div class="clearfix"></div>


            </header>

            <div style="margin-top:20px;">

                <div class="col-xs-12 col-md-8" style="border-right:1px solid #efefef;">

                    <form id="form-add-appointment" role="form" data-toggle="validation">

                        <div class="form-group">
                            <label for="AppointmentID">Code:</label>
                            <input type="text" class="form-control" id="AppointmentID" name="AppointmentID" value="@ViewBag.Guid" readonly>
                        </div>

                        <div class="form-group">
                            <label for="AppointmentToProfessional">Appointment to:</label>
                            <input type="text" class="form-control" id="AppointmentToProfessional" value="@User.Claims.First(claim => claim.Type == "name").Value" name="AppointmentToProfessional" readonly>
                            <input type="hidden" value="@User.Claims.First(claim => claim.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name").Value" />
                        </div>

                        <div class="form-group">
                            <label for="Workload">Workload:</label>
                            <input type="hidden" name="WorkloadId" id="WorkloadId" />
                            <input id="Workload" name="Workload" type="search" class="form-control" placeholder="Type part of workload name">
                        </div>

                        <div class="row">
                            <div class="col-md-4" id="sandbox-container">
                                @*<div class="form-group">*@
                                    <label for="AppointmentDate">Appointment date:</label>
                                    <div class="input-group date">
                                        <input type="text" id="AppointmentDate" name="AppointmentDate" class="form-control">
                                        <span class="input-group-addon"><i class="fa fa-calendar-check-o" aria-hidden="true"></i></span>
                                    </div>
                                @*</div>*@
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="Hours">Hours dispensed (on refered date):</label>
                                    <select id="Hours" name="Hours" class="form-control">
                                        <option value="" selected>- SELECT -</option>
                                        @for (int i = 1; i <= 24; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="TE">T&E (if applyable):</label>
                                    <input type="text" id="TE" name="TE" class="form-control" placeholder="R$ 0,00" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Editor">Any comment about this activity?</label>
                            <textarea class="form-control" rows="5" id="Editor"></textarea>
                        </div>

                        <button type="submit" class="btn btn-info" id="btnAddWorkload">
                            <i class='fa fa-floppy-o' aria-hidden='true'></i> Save
                        </button>

                    </form>

                    <div style="margin-top:20px;" id="message">
                        <!-- Message dynamically inputed here -->
                    </div>

                </div>
                <div class="col-xs-6 col-md-4">
                    <h3>
                        New work appointment
                    </h3>
                    <p>
                        To add a new work appointment, please click on button bellow. <br />
                        <div style="margin-bottom:50px;">
                            <a asp-controller="Appointment" asp-action="Add" class="btn btn-success" style="width:100px;">+ Add</a>
                        </div>
                    </p>
                </div>
            </div>

        </div>
    </div>
</section>


