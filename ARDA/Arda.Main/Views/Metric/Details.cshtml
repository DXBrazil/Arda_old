@model Arda.Common.ViewModels.Main.MetricViewModel
<section class="concontainer-fluid">

    <div class="col-xs-12">
        <div class="row">
            <header class="ctn-header-dashboard">

                <!-- Title -->
                <div class="col-xs-12 col-lg-3 col-md-4">
                    <h2>
                        Metrics
                    </h2>
                    <p>Details about "@Model.MetricName"</p>
                </div>

                <!-- Some information -->
                <div class="col-xs-12 col-lg-3 col-md-4">

                </div>

                <!-- Clear some garbage -->
                <div class="clearfix"></div>


            </header>

            <div style="margin-top:20px;">

                <div class="col-xs-12 col-md-8" style="border-right:1px solid #efefef;">

                    <form id="form-edit-fiscal-year" role="form">
                        <div class="form-group">
                            <label for="MetricID">Code:</label>
                            <input type="text" class="form-control" id="MetricID" name="MetricID" value="@Model.MetricID" readonly>
                        </div>

                        <div class="form-group">
                            <label for="FiscalYearID">Fiscal Year:</label>
                            <input type="text" class="form-control" id="FiscalYearID" name="FiscalYearID" value="@Model.TextualFiscalYear" readonly>
                        </div>

                        <div class="form-group">
                            <label for="MetricCategory">Category:</label>
                            <input type="text" class="form-control" id="MetricCategory" name="MetricCategory" value="@Model.MetricCategory" readonly>
                        </div>

                        <div class="form-group">
                            <label for="MetricName">Name:</label>
                            <input type="text" class="form-control" id="MetricName" name="MetricName" value="@Model.MetricName" readonly>
                        </div>

                        <div class="form-group">
                            <label for="Description">Description:</label>
                            <textarea class="form-control" id="Description" name="Description" rows="5" readonly>@Model.Description</textarea>
                        </div>
                        <div class='data-sorting-buttons'>
                            <a href='/Metric/Edit/@Model.MetricID' class='ds-button-edit'>
                                <i class='fa fa-pencil-square-o' aria-hidden='true'></i> Edit this Metric?
                            </a>
                        </div>
                    </form>

                </div>
                <div class="col-xs-6 col-md-4">
                    <h3>
                        New metric
                    </h3>
                    <p>
                        To add a new Metric, please click on button bellow. <br />
                        <div class="data-sorting-buttons">
                            <a asp-controller="Metric" asp-action="Add" class="ds-button-update"><i class="fa fa-plus" aria-hidden="true"></i> Add</a>
                        </div>
                    </p>
                </div>
            </div>

        </div>
    </div>
</section>